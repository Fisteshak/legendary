program clock;
Uses graph,crt,dos;
var gd,gm,xs,ys,rs,xm,ym,rm,xh,yh,rh,i,xr,yr,rr:integer;
hh,mm,ss,s100:word;
as,am,ah,os:real;
hhs,mms,sss,ii:string;
begin
gd:=VGA;
GM:=VGAHi;
InitGraph(gd, gm, 'c:\tools\tp7\bgi');
rs:=50;
rm:=35;
rh:=20;
rr:=85;
setcolor (green);
setfillstyle (1,green);
fillellipse (320,240,100,100);
setcolor (red);
setfillstyle (1,red);
fillellipse (320,240,70,70);
repeat
GetTime (hh,mm,ss,s100);
str (hh,hhs);
str (mm,mms);
str (ss,sss);
Setcolor (15);
Settextstyle (2,0,5);
Outtextxy (25,50,hhs);
Outtextxy (40,50,':');
Outtextxy (50,50,mms);
Outtextxy (65,50,':');
Outtextxy (75,50,sss);
as:=Pi/2-ss*Pi/30;
xs:=320+Round(rs*cos(as));
ys:=240-Round(rs*sin(as));
setcolor (0);
setfillstyle (1,0);
line (320,240,xs,ys);
am:=Pi/2-mm*Pi/30;
xm:=320+Round(rm*cos(am));
ym:=240-Round(rm*sin(am));
setcolor (0);
setfillstyle(1,0);
line (320,240,xm,ym);
ah:=Pi/2-hh*Pi/6;
xh:=320+Round(rh*cos(ah));
yh:=240-Round(rh*sin(ah));
line (320,240,xh,yh);
for i:=1 to 12 do
begin
setcolor (yellow);
setfillstyle (1,yellow);
os:=Pi/2-i*Pi/6;
xr:=320+Round(rr*cos(os));
yr:=240-Round(rr*sin(os));
Fillellipse (xr,yr,10,10);
setcolor (0);
settextstyle (1,0,1);
str (i,ii);
OuttextXY (xr-10,yr-10,ii);
end;
delay (32000);
setcolor (0);
setfillstyle (1,0);
bar (0,0,90,90);
setcolor (red);
setfillstyle (1,red);
line (320,240,xs,ys);
line (320,240,xm,ym);
line (320,240,xh,yh);
until keypressed;
CloseGraph;
end.